		<SpeedInsights />
	</head>
	<body > 

		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
    :root {
        --background-color-light: #ffffff; /* Color de fondo para el tema claro */
        --background-color-dark: #111827; /* Color de fondo para el tema oscuro */
    }

    body {
        background-color: var(--background-color-light); /* Por defecto, se usa el color de fondo claro */
    }

    body.dark {
        background-color: var(--background-color-dark); /* Cuando la clase 'dark' se añade al body, se usa el color de fondo oscuro */
    }
	html {
		
		font-family: 'Onest Variable', sans-serif;
		overflow: auto;
		scrollbar-gutter: stable;

	}

	body {
		display: flex;
		flex-direction: column;
		height: 100vh;
	}
	
</style>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');

        if (!sunIcon || !themeToggle) {
            return;
        }

        // Comprueba el tema actual en localStorage y ajusta el color del SVG
        let currentTheme = localStorage.getItem('theme');
        if (!currentTheme) {
            // Si no hay un tema en localStorage, usa el tema del sistema operativo
            currentTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            localStorage.setItem('theme', currentTheme);
        }

        if (currentTheme === 'dark') {
            document.body.classList.add('dark');
            sunIcon.classList.remove('text-black');
            sunIcon.classList.add('text-white');
        } else {
            document.body.classList.remove('dark');
            sunIcon.classList.remove('text-white');
            sunIcon.classList.add('text-black');
        }

        // Cambia el tema al hacer clic en el botón
        themeToggle.addEventListener('click', () => {
            if (document.body.classList.contains('dark')) {
                document.body.classList.remove('dark');
                sunIcon.classList.remove('text-white');
                sunIcon.classList.add('text-black');
                localStorage.setItem('theme', 'light');
            } else {
                document.body.classList.add('dark');
                sunIcon.classList.remove('text-black');
                sunIcon.classList.add('text-white');
                localStorage.setItem('theme', 'dark');
            }
        });
    });
</script>