---
import Logo from '../../components/icons/Logo.astro';
import Sun from '../icons/Sun.astro';
---

<nav class="bg-white border-gray-200 dark:bg-gray-900 dark:border-gray-700 sticky top-0 z-50">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" aria-label="Página de inicio de la pagina de zGonzq" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Logo class="size-8"/>
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm transition-colors dark:text-white text-black hover:text-white rounded-lg md:hidden dark:hover:bg-gray-800 hover:dark:text-white hover:bg-black focus:outline-none" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Abrir menú</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:justify-center md:items-center" >
        <li>
          <a href="#intro" class="block py-2 px-3 text-black md:text-black dark:md:text-white dark:text-white  hover:dark:text-[#F91362] hover:text-[#F91362] rounded hover:dark:bg-gray-800 md:hover:bg-white md:hover:dark:bg-gray-900 hover:bg-gray-300 md:hover:text-[#F91362] md:hover:dark:text-[#F91362] md:p-0 transition-colors duration-200 border-b-4 border-transparent hover:border-current" aria-current="page">Inicio</a>
        </li>

        <li>
          <a href="#projects" class="block py-2 px-3 text-black md:text-black dark:md:text-white dark:text-white hover:dark:text-[#F91362] hover:text-[#F91362] rounded hover:dark:bg-gray-800 md:hover:bg-white md:hover:dark:bg-gray-900 hover:bg-gray-300 md:hover:text-[#F91362] md:hover:dark:text-[#F91362] md:p-0 transition-colors duration-200 border-b-4 border-transparent hover:border-current">Proyectos</a>
        </li>

        <li>
          <a href="#information" class="block py-2 px-3 text-black md:text-black dark:md:text-white dark:text-white hover:dark:text-[#F91362] hover:text-[#F91362] rounded hover:dark:bg-gray-800 md:hover:bg-white md:hover:dark:bg-gray-900 hover:bg-gray-300 md:hover:text-[#F91362] md:hover:dark:text-[#F91362] md:p-0 transition-colors duration-200 border-b-4 border-transparent hover:border-current">Información</a>
        </li>

        <li>
          <a href="#contact" class="block py-2 px-3 text-black md:text-black dark:md:text-white hover:dark:text-[#F91362] dark:text-white hover:text-[#F91362] rounded hover:dark:bg-gray-800 md:hover:bg-white md:hover:dark:bg-gray-900 hover:bg-gray-300 md:hover:text-[#F91362] md:hover:dark:text-[#F91362] md:p-0 transition-colors duration-200 border-b-4 border-transparent hover:border-current" >Contacto</a>
        </li>

    </div>
    <div>
      <button aria-label="Botón para cambiar el theme de light a dark" id="theme-toggle" class="p-2">
        <Sun />
    </button>
    </div>
  </div>
</nav>

<script src="../../../node_modules/flowbite/dist/flowbite.min.js"></script>

